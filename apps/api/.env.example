# База данных
DATABASE_URL=postgresql://user:pass@localhost:5432/zaply

# Базовые URL
PUBLIC_APP_URL=http://localhost:5173
API_PORT=8787

# Часовой пояс по умолчанию для мастеров (если не указан)
DEFAULT_TZ=Europe/Moscow

# Секрет для онбординга мастера (защищает /public/setup)
SERVICH_SIGNUP_SECRET=change-me

# Telegram уведомления (опционально)
TELEGRAM_BOT_TOKEN=
# Если хочешь, чтобы новые мастера по умолчанию уведомлялись сюда — укажи chat_id
DEFAULT_TELEGRAM_CHAT_ID=

# Буфер времени до ближайшей записи, мин
BOOKING_BUFFER_MIN=60
